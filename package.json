{
  "name": "react-phonebook",
  "version": "0.0.0-development",
  "description": "react-phonebook is a digital address book built with React",
  "main": "index.js",
  "private": true,
  "scripts": {
    "precommit": "lint-staged && npm run lint",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "lint": "eslint src",
    "pretest": "npm run lint",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "coverage": "react-scripts test --env=jsdom \"--coverage\"",
    "report-coverage": "npm run coverage && cat ./coverage/lcov.info | coveralls",
    "check-coverage": "npm run coverage && http-server ./coverage/lcov-report/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ezavile/react-phonebook.git"
  },
  "author": "Edgar Zavala <ezavile@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ezavile/react-phonebook/issues"
  },
  "homepage": ".",
  "dependencies": {
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.1.0",
    "react-test-renderer": "16.2.0"
  },
  "devDependencies": {
    "coveralls": "3.0.0",
    "eslint": "4.17.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-prettier": "2.6.0",
    "http-server": "0.11.1",
    "husky": "0.14.3",
    "lint-staged": "6.1.0",
    "prettier": "1.10.2",
    "prettier-eslint": "8.8.1",
    "prettier-eslint-cli": "4.7.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/App.js",
      "src/components/**/*.jsx"
    ]
  }
}
